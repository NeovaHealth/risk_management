<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="risk_management_project_task_form_view">
            <field name="name">risk.management.inherit.task.view1</field>
            <field name="model">project.task</field>
            <field name="type">form</field>
            <field name="priority">15</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/group" position="replace">
                    <group>
                        <field name="project_id" on_change="onchange_project(project_id)"
                               context="{'default_use_tasks':1}" domain="['|',('user_id','=',uid),('members','=',uid)]"/>
                        <field name="user_id" attrs="{'readonly':[('state','in',['done', 'cancelled'])]}"
                               options='{"no_open": True}'/>
                        <field name="planned_hours" widget="float_time"
                               groups="project.group_time_work_estimation_tasks"
                               on_change="onchange_planned(planned_hours, effective_hours)"/>
                    </group>
                    <group>
                        <field name="date_deadline" attrs="{'readonly':[('state','in',['done', 'cancelled'])]}"/>
                        <field name="categ_ids" widget="many2many_tags"/>
                        <field name="progress" widget="progressbar"
                               groups="project.group_time_work_estimation_tasks"
                               attrs="{'invisible':[('state','=','cancelled')]}"/>
                        <field name="risk_id" />
                    </group>
                </xpath>
            </field>
        </record>

        <record id="risk_management_project_task_tree_view" model="ir.ui.view">
            <field name="name">risk.management.inherit.task.tree1</field>
            <field name="model">project.task</field>
            <field eval="2" name="priority"/>
            <field name="inherit_id" ref="project.view_task_tree2"/>
            <field name="arch" type="xml">
                <data>
                    <field name="name" position="after">
                        <field name="risk_id" invisible="context.get('risk_id_visible',True)"/>
                    </field>
                    <xpath expr="/tree[@string='Tasks']" position="attributes">
                        <attribute name="colors">green:risk_id;grey:state in ('cancelled','done');blue:state ==
                            'pending';red:date_deadline and (date_deadline&lt;current_date) and (state in
                            ('draft','pending','open'))
                        </attribute>
                    </xpath>
                    <field name="user_id" position="replace">
                        <field name="user_id"/>
                    </field>
                </data>
            </field>
        </record>

        <record id="risk_management_project_task_search_view" model="ir.ui.view">
            <field name="name">risk.management.inherit.task.search.view</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_search_form"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@string='Deadlines']" position="after">
                    <filter string="Risk Action" context="{'risk_id_visible': False}"
                            domain="[('risk_id','&lt;&gt;',False)]" help="Show only tasks (actions) on risk"
                            icon="terp-emblem-important"/>
                </xpath>
               <filter name="group_project_id" position="after">
                    <filter string="Risk" name="group_risk_id" icon="terp-rating-rated" domain="[]" context="{'group_by' : 'risk_id'}"/>
               </filter>
            </field>
        </record>

        <record id="risk_management_project_task_kanban_view" model="ir.ui.view">
            <field name="name">risk.management.inherit.task.kanban.view</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_kanban"/>
            <field name="arch" type="xml">
                <kanban position="attributes">
                   <attribute name="default_group_by">risk_id</attribute>
                </kanban>
                <field name="project_id" position="before">
                    <field name="risk_id"/>
                    <br/>
                    <field name="stage_id"/>
                    <br/>
                </field>

            </field>
        </record>

    </data>
</openerp>
